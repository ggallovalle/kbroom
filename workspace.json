{
  "version": 2,
  "projects": {
    "fp-tk": {
      "root": "packages/fp-tk",
      "sourceRoot": "packages/fp-tk/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/fp-tk/**/*.ts"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/packages/fp-tk"],
          "options": {
            "jestConfig": "packages/fp-tk/jest.config.js",
            "passWithNoTests": true
          }
        },
        "build": {
          "executor": "@nrwl/node:package",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/packages/fp-tk",
            "tsConfig": "packages/fp-tk/tsconfig.lib.json",
            "packageJson": "packages/fp-tk/package.json",
            "main": "packages/fp-tk/src/index.ts",
            "assets": ["packages/fp-tk/*.md"]
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  }
}
